<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:orientation="vertical"
    android:weightSum="6"
    android:background="@color/loginBg">

    <android.support.v7.widget.AppCompatAutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/loginBg"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="0.5"
        app:srcCompat="@drawable/logo" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_marginTop="5dp"
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical|center|top"
        android:text="Your Paypal, Inc Credentials"
        android:textColor="@color/loginText"
        android:textSize="@dimen/lblText"
        />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/UserName"
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="  paypalcorp\username"
        android:textColor="@color/loginText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/Password"
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="  password"
        android:textColor="@color/loginText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/SignOn"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Sign On"
        android:textColor="#FFFFFF"
        android:background="@color/signin"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textStyle="bold"/>
   <android.support.v7.widget.AppCompatAutoCompleteTextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
       android:background="@color/loginBg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/loginButtomBG">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center|bottom"
            android:text="2018 PayPal, Inc. All Rights Reserved"
            android:textColor="@color/loginText"
            android:textSize="@dimen/graphText" />

    </LinearLayout>


</LinearLayout>